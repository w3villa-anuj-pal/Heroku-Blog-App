<div id = "session-new-content" class = "page-content" >
  <h1 class="text-center pt-4">Log in</h1>
  <div class="container">
    <p id="notice" class="text-center text-danger fw-bold"><%= notice %></p>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row ">
            <%= f.label :email, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
          <div class="form-group row mt-4">
            <%= f.label :password, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
            </div>
          </div>
          <div class=" mt-3 d-flex justify-content-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mt-5 text-center">
        <%= link_to '[ Cancel and return to Blogs listing ]',blogs_path, class: "text-danger" %>
      </div>
    </div>
  </div>
</div>
