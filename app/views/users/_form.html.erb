<div id ="user-signup-form" class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/error' ,obj: @user %>
    <%= form_with(model: @user,class: "shadow p-3 mb-3 bg-info rounded", id: "signup-form-bg", local: true) do |f| %>
         <div class="form-group row mt-5">
          <%= f.label :username, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

         <div class="form-group row mt-3">
          <%= f.label :email, class: "col-2 col-form-label text-dark" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :password, class: "col-2 col-form-label text-dark" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class=" mt-5 d-flex justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
     <div class="mb-3 text-center">
      <%= link_to '[ Cancel and return to Blogs listing ]', blogs_path, class: "text-danger" %>
    </div>
  </div>
</div> 
